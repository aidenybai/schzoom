<div class="mt-5 w-100">
  <div
    class="flex mx-auto flex-col max-w-md p-6 rounded-md sm:p-10 bg-gray-50 text-gray-800"
  >
    <div class="mb-8 text-center">
      <h1 class="my-3 text-4xl font-bold">
        Log in
      </h1>
      <p class="text-sm text-gray-600">
        Log in to access your account
      </p>
    </div>
    <form
      action="/user/login"
      method="post"
      class="space-y-12 ng-untouched ng-pristine ng-valid"
    >
      <div class="space-y-4">
        <div>
          <label for="email" class="block mb-2 text-sm">
            Username
          </label>
          <input
            type="text"
            name="username"
            placeholder="John Doe"
            class="w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800"
          />
        </div>
        <div>
          <div class="flex justify-between mb-2">
            <label for="password" class="text-sm">
              Password
            </label>
          </div>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="*****"
            class="w-full px-3 py-2 border rounded-md border-gray-300 bg-gray-50 text-gray-800"
          />
        </div>
      </div>
      <div class="space-y-2">
        <div>
          <button
            type="submit"
            class="w-full px-8 py-3 rounded-md bg-blue-600 text-gray-50"
          >
            Log in
          </button>
        </div>
        <p class="px-6 text-sm text-center text-gray-600">
          Don't have an account yet?
          <a href="/user/signup" class="hover:underline text-blue-600">
            Sign up
          </a>

        </p>
      </div>
    </form>
  </div>
</div>